<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/aapt"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">

    <item>
        <inset android:insetLeft="-1dp" android:insetRight="-1dp">
            <shape android:shape="rectangle">
                <corners android:radius="30dp" />
                <gradient
                    android:type="linear"
                    android:angle="270"
                    android:startColor="@color/traslucidoblanco"
                    android:centerColor="@color/blanco"
                    android:endColor="@color/traslucidoblanco"
                    android:centerX="0.5"
                    android:centerY="0.75" />
            </shape>
        </inset>
    </item>
</selector>