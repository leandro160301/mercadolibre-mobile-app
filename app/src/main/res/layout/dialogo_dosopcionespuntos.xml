<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/stylekeycor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="600dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/buttonc"
                android:layout_width="173dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/boton_selector_gris"
                android:text="CANCELAR"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="597dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="597dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttons"
                android:layout_width="173dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/boton_selector_gris"
                android:text="GUARDAR"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="865dp"
                android:layout_height="match_parent"
                android:background="@drawable/botoneraprincipal2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="706dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewt"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="Ingrese"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="#FFFFFF"
                            android:textSize="34sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etDatos"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:autoText="false"
                            android:background="@drawable/stylekeycor3"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:importantForAutofill="no"
                            android:inputType="textUri|textNoSuggestions"
                            android:text=""
                            android:textSize="48sp"
                            tools:targetApi="o">

                            <requestFocus />
                        </EditText>

                        <LinearLayout
                            android:id="@+id/lndelete_text"
                            android:layout_width="65dp"
                            android:layout_height="66dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="623dp"
                            android:layout_marginEnd="18dp"
                            android:background="@drawable/delete_text"
                            android:orientation="horizontal"></LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

