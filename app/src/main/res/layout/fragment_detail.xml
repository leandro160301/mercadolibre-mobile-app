<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Encabezado amarillo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/amarillo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/amarillo"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/campollenarclickeableceropadding_selector"
                android:focusable="false"
                android:hint="Buscar"
                android:inputType="none"
                android:paddingStart="48dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/icon_search"
                android:tint="@color/gris"
                android:contentDescription="Buscar" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Carrusel de imágenes -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imagePager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/imageIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:padding="4dp"
                    android:background="@drawable/indicator_background" />
            </FrameLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del producto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Precio -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$999.99"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/azul"
                android:layout_marginBottom="4dp" />

            <!-- Condición y stock -->
            <TextView
                android:id="@+id/productCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo | 10 disponibles"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Botón Comprar -->
            <Button
                android:id="@+id/buyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprar ahora"
                android:backgroundTint="@color/azul"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Envío -->
            <TextView
                android:id="@+id/shippingInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envío gratis a todo el país"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_marginBottom="16dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del producto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este producto es ideal para..."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Detalles técnicos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles técnicos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/productSpecs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Marca: X\n• Modelo: Y\n• Color: Negro\n• Peso: 1.5kg"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>