<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:id="@+id/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <!-- Título del producto -->
        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del producto"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Precio y condición del producto -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: $999"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/productCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condición: Nuevo"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <!-- Disponibilidad y garantía -->
        <TextView
            android:id="@+id/productAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponible: 10"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/productWarranty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garantía: 6 meses"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>
</androidx.cardview.widget.CardView>